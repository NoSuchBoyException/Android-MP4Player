<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下状态-->
    <item 
        android:state_focused="true"
        android:state_pressed="true"
        android:drawable="@drawable/seekbar_thumb">
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="8"
                android:angle="0"
                android:startColor="#FFFF0000"
                android:centerColor="#FF00FF00"
                android:endColor="#000000" />
            <size
                android:width="12dip" 
                android:height="12dip"></size>
        </shape>
    </item>
    
    <!--普通无焦点状态-->
    <item
        android:state_focused="false"
        android:state_pressed="false"
        android:drawable="@drawable/seekbar_thumb">
        <shape
            android:shape="oval">
            <gradient 
                android:type="radial"
                android:gradientRadius="8"
                android:angle="0"
                android:startColor="#FFFF0000"
                android:centerColor="#FF00FF00"
                android:endColor="#000000" />
            <size
                android:width="12dip"
                android:height="12dip" />
        </shape>
    </item>
    
    <!--有焦点状态-->
    <item
        android:state_focused="true"
        android:state_pressed="false"
        android:drawable="@drawable/seekbar_thumb">
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="8"
                android:angle="0"
                android:startColor="#FFFF0000"
                android:centerColor="#FF00FF00"
                android:endColor="#000000" />
            <size
                android:width="16dip"
                android:height="16dip" />
        </shape>
    </item>
   
    <!--有焦点-->
    <item
        android:state_focused="true"
        android:drawable="@drawable/seekbar_thumb">
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="8"
                android:angle="0"
                android:startColor="#FFFF0000"
                android:centerColor="#FF00FF00"
                android:endColor="#000000" />
            <size
                android:width="16dip"
                android:height="16dip" />
        </shape>
    </item>
    
</selector>